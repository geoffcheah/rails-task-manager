<div class="container">
  <div class="box-tasks">
    <h1>My Tasks</h1>
    <ul>
      <% @tasks.each do |task| %>
        <li>(<%= task.completed %>) <%= link_to task.title, task_path(task) %> ||
          <%= link_to delete_task_path(task), method: :delete, data: {confirm: 'Are you sure?'} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
          </li>
      <% end %>
    </ul>
    <%= link_to new_task_path do %>
    <i class="fas fa-pencil-alt"> Create a new  Task</i>
    <% end %>
  </div>
</div>
