<div class="container">
  <div class="box-tasks">
    <h1>New Task</h1>
    <%= form_for(@task) do |t| %>
      <%= t.label :title %>
      <%= t.text_field :title %>

      <%= t.label :details %>
      <%= t.text_field :details %>

      <%= t.submit "Create Task" %>
    <% end %>
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>

